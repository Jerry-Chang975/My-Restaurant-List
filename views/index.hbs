<link rel='stylesheet' href='/stylesheets/index-style.css' />

<header>
  <!-- navigation -->
  <nav class='navbar navbar-light bg-light'>
    <div class='container'>
      <a class='navbar-brand' href='/'>
        <img
          src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png'
          width='30'
          height='30'
          class='d-inline-block align-top'
          alt='我的餐廳清單'
        />
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class='banner'></div>
</header>
<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/restaurants'>
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='input-group'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            value='{{keyword}}'
            aria-describedby='search-button'
          />
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i
                class='fas fa-search'
              ></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class='container mt-5' style='max-width: 1000px'>
  <a href='/create'><img
      id='add-restaurant'
      src='/imgs/add.png'
      alt='add-new-restaurant'
    />
  </a>
  <div class='d-flex justify-content-start flex-wrap'>
    {{#each restaurants as |restaurant|}}
      <div class='card mb-3'>
        <a href='/{{restaurant.id}}'><img
            class='card-img-top'
            src='{{restaurant.image}}'
            alt='{{restaurant.name}}'
          />
        </a>
        <div class='card-body p-3'>
          <h6 class='card-title mb-1'>{{restaurant.name}}</h6>

          <div class='restaurant-category mb-1'>
            <i class='fas fa-utensils pr-2'></i>
            {{restaurant.category}}
          </div>

          <span class='badge rounded-pill bg-danger font-weight-normal'>
            {{restaurant.rating}}
            <i class='fas fa-star fa-xs'></i>
          </span>
        </div>
        <div class='card-footer d-flex justify-content-end'>
          <a
            href='/{{restaurant.id}}'
            type='button'
            class='btn btn-primary'
          >Detail</a>
          <a
            href='/{{restaurant.id}}/edit'
            type='button'
            class='btn btn-warning'
          >Edit</a>
          <form action='/{{restaurant.id}}?_method=DELETE' method='post'>
            <button type='submit' class='btn btn-danger'>Delete</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>